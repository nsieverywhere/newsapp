<%- include('partials/header'); -%>
<h1>Our Latest News</h1>

<% for ( story of storycontent) { %>
<div class="col-lg-12">
  <div class="card bg-white text-black commentcard">
    <div class="card-body">
      <h5 class="card-title"><%= story.title %></h5>
      <p class="card-text">by <%= story.by %></p>
      <p id="pagelink">
        Link:
        <a href="<%= story.url %>" target="_blank"><%= story.url %></a>
      </p>
      <% for ( comment of commentcontent) { %>

      <div class="card bg-info commentcard">
        <div class="card-body text-white">
          <h5 class="card-title">by <%= comment.by %></h5>

          <p class="card-text"><%= comment.text %></p>
        </div>
      </div>
      <% } %>
    </div>
  </div>
</div>

<% } %> <%- include('partials/footer'); -%>
